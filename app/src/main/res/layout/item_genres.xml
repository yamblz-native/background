<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/artist_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardBackgroundColor="@color/white">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:paddingTop="@dimen/spacing_normal_16"
                  android:paddingLeft="@dimen/spacing_normal_16"
                  android:paddingBottom="@dimen/spacing_normal_16">

        <ImageView
            android:id="@+id/collage"
            android:layout_width="@dimen/collage_size"
            android:layout_height="@dimen/collage_size"
            android:contentDescription="@string/collage" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medium_20"/>

    </LinearLayout>
</android.support.v7.widget.CardView>